<h1>Orders:</h1>
<% @user.orders.each do |order| %>
<section class="orders-<%= order.id %>">
<h2>Order Details:</h2>
<p>ID: <%= order.id %></p>
<p>Created At: <%= order.created_at %></p>
<p>Updated At: <%= order.updated_at %></p>
<p>Status: <%= order.status %></p>
<p>Total Items: <%= order.total_items %></p>
<h3>Total: <%= order.grandtotal %></h3>
<p><%= link_to "View More Order Details", "/profile/orders/#{order.id}" %></p>
</section>
<% end %>
